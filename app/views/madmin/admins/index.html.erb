<%= content_for :title, resource.friendly_name.pluralize %>

<header class="header">
  <h1><%= resource.friendly_name.pluralize %></h1>

  <div class="actions">
    <%= link_to resource.new_path, class: "btn btn-secondary" do %>
      New <%= tag.span resource.friendly_name, class: "hidden md:inline-block" %>
    <% end %>
  </div>
</header>

<div class="filters mb-4 p-4 card-bg">
  <%= form_with url: resource.index_path, method: :get, class: "flex gap-3 items-end flex-wrap" do |f| %>
    <div>
      <%= f.label :q, "Search", class: "block text-sm font-medium text-dark-300 mb-1" %>
      <%= f.search_field :q, value: params[:q], placeholder: "Search admins...", class: "form-input" %>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Filter", class: "btn btn-primary" %>
      <% if params[:q].present? %>
        <%= link_to "Clear", resource.index_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="table-scroll">
  <table>
    <thead>
      <tr>
        <th><%= sortable :email, "Email" %></th>
        <th><%= sortable :created_at, "Created" %></th>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td>
            <%= link_to resource.show_path(record), class: "flex items-center gap-3" do %>
              <img src="https://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(record.email.downcase.strip) %>?s=32&d=mp" class="w-8 h-8 rounded-full" alt="">
              <span><%= record.email %></span>
            <% end %>
          </td>
          <td><%= record.created_at.strftime("%-d %B %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pagination">
  <% if @pagy.respond_to?(:series_nav) %>
    <%== @pagy.series_nav if @pagy.last > 1 %>
    <%== @pagy.info_tag %>
  <% else %>
    <%== pagy_nav @pagy if @pagy.last > 1 %>
    <%== pagy_info @pagy %>
  <% end %>
</div>
