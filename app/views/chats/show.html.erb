<%= turbo_stream_from "chat_#{@chat.id}" %>

<% content_for :title, "Chat" %>
<% content_for :full_width, true %>

<div class="flex flex-col h-[calc(100vh-64px)] lg:h-screen">
  <div class="flex-1 overflow-y-auto" data-controller="scroll-bottom">
    <div id="messages" class="max-w-4xl mx-auto py-6 px-4">
      <% @chat.messages.where.not(id: nil).each do |message| %>
        <%= render message %>
      <% end %>
    </div>
  </div>

  <div class="sticky bottom-0 bg-gradient-to-t from-dark-950 via-dark-950 to-transparent pt-8 pb-6">
    <div class="max-w-4xl mx-auto px-4">
      <%= render "messages/form", chat: @chat, message: @message %>
    </div>
  </div>
</div>
